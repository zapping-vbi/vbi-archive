<document title="ChangeLog" abstract="CVS ChangeLog">
<header>Latest CVS entries</header>
<?php
$file_location = "http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/~checkout~/zapping/zapping/ChangeLog?content-type=text/plain";
$file = fopen("ChangeLog", "r");
if ($file) {
  print("<pre>");
  for ($i=0; $i<50; $i++) {
    $line = fgets($file, 1024);
    print(htmlspecialchars($line));
  }
  fclose($file);
  print("</pre>");
  print("<b>");
  print("The complete ChangeLog is available
	<a href=\"$file_location\">here</a>.");
  print("</b>");
} else {
  print("<b>Error:</b> Couldn't open the ChangeLog for reading,
	it is available from <a href=\"$file_location\">here</a>.");
}
?>
</document>

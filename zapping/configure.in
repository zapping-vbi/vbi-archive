i?86-* | k?-*) dnl catch i386,i486,i586,i686,k6,k7
  AC_DEFINE(__i386__, 1, [host]) 
  HAVE_MMX="yes";;
alpha*-*) AC_DEFINE(__alpha__, 1, [host]);;
sparc-*) 
  AC_DEFINE(__sparc__, 1, [host]);;
ppc-*)
  AC_DEFINE(__ppc__, 1, [host]);;
powerpc-*)
  AC_DEFINE(__ppc__, 1, [host]);;

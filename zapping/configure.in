  -Wdeclaration-after-statement -Wundef -Wendif-labels -Wshadow \
  -Wfloat-equal -Wpointer-arith -Wwrite-strings \
  -Wbad-function-cast -Wcast-qual -Wcast-align \
  -Winline -Wconversion" # -Wpadded

